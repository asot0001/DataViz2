{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Population of Countries Divided by Color",
  "width": 1200,
  "height": 600,
  "projection": {
    "type": "equalEarth"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/JiazhouLiu/FIT3179/main/VegaLite/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
    "format": {
      "type": "topojson",
      "feature": "ne_110m_admin_0_countries"
    }
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "data/World Population Live Dataset.csv"
        },
        "key": "Name",
        "fields": [
          "Area (km²)",
          "GrowthRate",
          "Rank",
          "Density (per km²)",
          "2022"
        ]
      }
    },
    {
      "calculate": "datum['2022'] * 1000",
      "as": "2022pop"
    },
    {"calculate": "datum['2022'] + 0.1", "as": "2022new"}
  ],
  "mark": {
    "type": "geoshape"
  },
  "encoding": {
    "color": {
      "field": "2022pop",
      "type": "quantitative",
      "title": "Population in 2022",
      "sort": "descending",
      "scale": {
        "scheme": "viridis",
        "type": "log",
        "domain": [
          1000,
          1500000000
        ]
      }
    },
    "tooltip": [
      {
        "field": "properties.NAME",
        "type": "nominal",
        "title": "Country"
      },
      {
        "field": "GrowthRate",
        "type": "quantitative",
        "title": "Growth Rate"
      },
      {
        "field": "Rank",
        "type": "quantitative",
        "title": "Rank"
      },
      {
        "field": "Density (per km²)",
        "type": "quantitative",
        "title": "Density (per km²)"
        
      },
      {
        "field": "2022pop",
        "type": "quantitative",
        "title": "Population in 2022",
        "format": ",.4s"
      },
      {
        "field": "Area (km²)",
        "type": "quantitative",
        "title": "Area (km²)",
        "format": ",.4s"

      }
    ]
  }
}