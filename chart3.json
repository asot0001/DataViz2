{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Rank of the Countries and Their Growth Rate"
  },
  "data": {
    "url": "data/World Population Live Dataset.csv"
  },
  "transform": [
    {
      "calculate": "datum['2022'] * 1000",
      "as": "2022pop"
    },
    {
      "calculate": "datum['1970'] * 1000",
      "as": "1970pop"
    },
    {
      "filter": "country_selection == null || datum.GrowthRate == country_selection"
  }
  ],
  "width": "container",
  "height": 800,
  "params": [
    {
      "name": "country_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          0.98,
          1,
          1.01,
          1.02,
          1.03,
          1.04
        ],
        "labels": [
          "All",
          "0.98",
          "1",
          "1.01",
          "1.02",
          "1.03",
          "1.04"
        ],
        "name": "Growth Rate Selection: "
      }
    }
  ],
  "encoding": {
    "opacity": {
      "value": 0.7
    },
    "y": {
      "field": "Rank",
      "type": "quantitative",
      "sort": "descending",
      "axis": {
        "tickCount": 6
      },
      "scale": {}
    },
    "x": {
      "field": "Area (km²)",
      "type": "quantitative",
      "axis": {
        "tickCount": 7
      },
      "scale": {
        "type": "log",
        "domain": [
          1,
          100000000
        ]
      }
    },
    "tooltip": [
      {
        "field": "Name",
        "type": "nominal",
        "title": "Country"
      },
      {
        "field": "GrowthRate",
        "type": "quantitative",
        "title": "Growth Rate"
      },
      {
        "field": "Rank",
        "type": "quantitative",
        "title": "Rank"
      },
      {
        "field": "Density (per km²)",
        "type": "quantitative",
        "title": "Density (per km²)"
      },
      {
        "field": "World Population Percentage",
        "type": "nominal",
        "title": "World Population Percentage"
      },
      {
        "field": "2022pop",
        "type": "quantitative",
        "title": "Population in 2022",
        "format": ",.4s"
      },
      {
        "field": "1970pop",
        "type": "quantitative",
        "title": "Population in 1970",
        "format": ",.4s"
      }
    ]
  },
  "layer": [
    {
      "mark": "point",
      "encoding": {
        "size": {
          "field": "1970pop",
          "title": "Population in 1970",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [
              10000,
              500000,
              1000000,
              15000000,
              200000000
            ],
            "range": [
              100,
              200,
              800,
              1000,
              2000
            ]
          }
        },
        "color": {
          "field": "2022pop",
          "title": "Population in 2022",
          "type": "quantitative",
          "sort": "descending",
          "scale": {
            "scheme": "viridis",
            "type": "log",
            "domain": [
              1000,
              1500000000
            ]
          }
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 30,
        "fontSize": 9,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {
          "field": "Name",
          "type": "nominal"
        },
        "color": {
          "value": "black"
        },
        "opacity": {
          "condition": {
            "test": "datum['Name']=='China' || datum['Name']=='Greenland' || datum['Name']=='Russia' || datum['Name']=='Vatican City' || datum['Name']=='Australia' || datum['Name']=='Falkland Islands'|| datum['Name']=='Mongolia'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {
            "field": "Name",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "GrowthRate",
            "type": "quantitative",
            "title": "Growth Rate"
          },
          {
            "field": "Rank",
            "type": "quantitative",
            "title": "Rank"
          },
          {
            "field": "Density (per km²)",
            "type": "quantitative",
            "title": "Density (per km²)"
          },
          {
            "field": "World Population Percentage",
            "type": "nominal",
            "title": "World Population Percentage"
          },
          {
            "field": "2022pop",
            "type": "quantitative",
            "title": "Population in 2022",
            "format": ",.4s"
          },
          {
            "field": "1970pop",
            "type": "quantitative",
            "title": "Population in 1970",
            "format": ",.4s"
          }
        ]
      }
    }
  ]
}