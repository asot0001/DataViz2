{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Rank of the Countries and Their Growth Rate"
  },
  "data": {
    "url": "data/World Population Live Dataset.csv"
  }, "transform": [
    {
        "calculate": "datum['2022'] * 1000",
        "as": "2022pop"
    },
    {
      "calculate": "datum['1970'] * 1000",
      "as": "1970pop"
  }
],
  "width": 1050,
  "height": 800,
  "params": [
    {
      "name": "Population_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 1000,
        "max": 1400000,
        "step": 1000,
        "name": "Maximum Population in 1970: "
      }
    }
  ],
  "encoding": {
    "opacity": {
      "value": 0.8
    },
    "y": {
      "field": "Rank",
      "type": "quantitative",
      "sort": "descending",
      "axis": {
        "tickCount": 6
      },
      "scale": {}
    },
    "x": {
      "field": "GrowthRate",
      "type": "quantitative",
      "axis": {
        "tickCount": 7
      },
      "scale": {
        "type": "log",
        "domain": [
          0.9,
          1.08
        ]
      }
    },
    "tooltip": [
      {
        "field": "Name",
        "type": "nominal",
        "title": "Country"
      },
      {
        "field": "GrowthRate",
        "type": "quantitative",
        "title": "Growth Rate"
      },
      {
        "field": "Rank",
        "type": "quantitative",
        "title": "Rank"
      },
      {
        "field": "Density (per km²)",
        "type": "quantitative",
        "title": "Density (per km²)"
      },
      {
        "field": "World Population Percentage",
        "type": "nominal",
        "title": "World Population Percentage"
      },
      {
        "field": "2022pop",
        "type": "quantitative",
        "title": "Population in 2022",
        "format": ",.4s"
      },
      {
        "field": "1970pop",
        "type": "quantitative",
        "title": "Population in 1970",
        "format": ",.4s"
      }
    ]
  },
  "layer": [
    {
      "mark": "point",
      "encoding": {
        "size": {
          "field": "1970pop",
          "title": "Population in 1970",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [
              10000,
              500000,
              1000000,
              15000000,
              200000000
            ],
            "range": [
              100,
              200,
              800,
              1000,
              2000
            ]
          }
        },
        "color": {
          "field": "2022pop",
          "title": "Population in 2022",
          "type": "quantitative",
          "sort": "descending",
          "scale": {
            "scheme": "viridis",
            "type": "log",
            "domain": [
              1000,
              1500000000
            ]
          }
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -26,
        "fontSize": 9,
        "fontStyle": "italic",
        "fontWeight":"bold"
      },
      "encoding": {
        "text": {
          "field": "Name",
          "type": "nominal"
        },
        "color": {
          "value": "black"
        },
         "opacity": {
          
            "condition": {
              "test": "datum['Name']=='China' || datum['Name']=='Ukraine' || datum['Name']=='Moldova' || datum['Name']=='Vatican City'","value": 1
            },"value": 0
          
         },
         "tooltip": [
          {
            "field": "Name",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "GrowthRate",
            "type": "quantitative",
            "title": "Growth Rate"
          },
          {
            "field": "Rank",
            "type": "quantitative",
            "title": "Rank"
          },
          {
            "field": "Density (per km²)",
            "type": "quantitative",
            "title": "Density (per km²)"
          },
          {
            "field": "World Population Percentage",
            "type": "nominal",
            "title": "World Population Percentage"
          },
          {
            "field": "2022pop",
            "type": "quantitative",
            "title": "Population in 2022",
            "format": ",.4s"
          },
          {
            "field": "1970pop",
            "type": "quantitative",
            "title": "Population in 1970",
            "format": ",.4s"
          }
        ]
        
      }
    }
  ]
}