{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "data/World Population Live Dataset.csv"
    },
    "params": [
      {
        "name": "country_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            1,
            1.01,
            1.02
            
          ],
          "labels": [
            "All",
            "1",
            "1.01",
            "1.02"
          ],
          "name": "Growth Rate Selection: "
        }
      }
    ],
    "transform": [
      {
        "calculate": "datum['2022'] * 1000",
        "as": "2022pop"
      },
      {
        "calculate": "datum['1970'] * 1000",
        "as": "1970pop"
      },
      {
        "filter": "datum['Name']=='China' || datum['Name']=='United States' || datum['Name']=='Mexico' || datum['Name']=='Russia'|| datum['Name']=='India'|| datum['Name']=='Pakistan'|| datum['Name']=='Bangladesh'|| datum['Name']=='Indonesia'|| datum['Name']=='Nigeria'|| datum['Name']=='Brazil'"
      },
      {
        "filter": "country_selection == null || datum.GrowthRate == country_selection"
      }
    ],
    "width": "container",
    "height": 800,
    "encoding": {
      "x": {
        "field": "2022pop",
        "type": "quantitative",
        "title": "Population between 1970 and "
      },
      "y": {
        "field": "Name",
        "type": "nominal"
      },
      "opacity": {
        "value": 0.7
      },"color": {
        "field": "2022pop",
        "type": "quantitative",
        "sort": "descending",
        "title": "",
        "scale": {
            "scheme": "viridis",
            "type": "log",
            "domain": [
                1000,
                1500000000
            ]
        }
    },
      "tooltip": [
        {
          "field": "Name",
          "type": "nominal",
          "title": "Country"
        },
        {
          "field": "GrowthRate",
          "type": "quantitative",
          "title": "Growth Rate"
        },
        {
          "field": "Rank",
          "type": "quantitative",
          "title": "Rank"
        },
        {
          "field": "Density (per km²)",
          "type": "quantitative",
          "title": "Density (per km²)"
        },
        {
          "field": "World Population Percentage",
          "type": "nominal",
          "title": "World Population Percentage"
        },
        {
          "field": "2022pop",
          "type": "quantitative",
          "title": "Population in 2022",
          "format": ",.4s"
        },
        {
          "field": "1970pop",
          "type": "quantitative",
          "title": "Population in 1970",
          "format": ",.4s"
        }
      ]
    },
    "layer": [
      {
        "mark": "bar"
      },
      {
        "mark": "bar",
        "encoding": {
          "x": {
            "field": "1970pop",
            "type": "quantitative",
            "title": "2022"
          },
          "y": {
            "field": "Name",
            "type": "nominal",
            "title":"Country"
          },
          "opacity": {
            "value": 1
          },"color": {
            "field": "2022pop",
            "type": "quantitative",
            "sort": "descending",
            "title": "Population",
            "scale": {
                "scheme": "viridis",
                "type": "log",
                "domain": [
                    1000,
                    1500000000
                ]
            }
        },
          "tooltip": [
            {
              "field": "Name",
              "type": "nominal",
              "title": "Country"
            },
            {
              "field": "GrowthRate",
              "type": "quantitative",
              "title": "Growth Rate"
            },
            {
              "field": "Rank",
              "type": "quantitative",
              "title": "Rank"
            },
            {
              "field": "Density (per km²)",
              "type": "quantitative",
              "title": "Density (per km²)"
            },
            {
              "field": "World Population Percentage",
              "type": "nominal",
              "title": "World Population Percentage"
            },
            {
              "field": "2022pop",
              "type": "quantitative",
              "title": "Population in 2022",
              "format": ",.4s"
            },
            {
              "field": "1970pop",
              "type": "quantitative",
              "title": "Population in 1970",
              "format": ",.4s"
            }
          ]
        }
      }
    ]
  }