{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Google's stock price over time.",
  "data": {
    "url": "data/World Population Live Dataset.csv"
  },
  "width": "container",
  "height": 800,
  "params": [
   
  ],
  "transform": [
    {
      "calculate": "datum['2022'] * 1000",
      "as": "2022pop"
    },
    {
      "calculate": "datum['1970'] * 1000",
      "as": "1970pop"
    },
  
    {
      "filter": "datum['Name']=='China' || datum['Name']=='United States' || datum['Name']=='Mexico' || datum['Name']=='Russia'|| datum['Name']=='India'|| datum['Name']=='Pakistan'|| datum['Name']=='Bangladesh'|| datum['Name']=='Indonesia'|| datum['Name']=='Nigeria'|| datum['Name']=='Brazil'"
    }
  ],
  "mark": "line",
  "encoding": {
    "x": {
      "field": "2022pop",
      "type": "quantitative",
      "title":"Population in 2022",
      "axis": {
        "tickCount": 6
      },
      "scale": {
        "type": "log",
        "domain": [
          100000000,
          1500000000
        ]
      }
    },"color": {
      "type": "nominal",
      "title":null,
      "legend": null,
      "field": "status_mean",
      "scale": {
        "range": ["black", "blue"]
      }
    },
    "y": {
      "field": "1970pop",
      "type": "quantitative",
      "title":"Population in 1970",
      "axis": {
        "tickCount": 6
      }
    },
   
    "tooltip": [
      {
        "field": "Name",
        "type": "nominal",
        "title": "Country"
      },
      {
        "field": "GrowthRate",
        "type": "quantitative",
        "title": "Growth Rate"
      },
      {
        "field": "Rank",
        "type": "quantitative",
        "title": "Rank"
      },
      {
        "field": "World Population Percentage",
        "type": "nominal",
        "title": "World Population Percentage"
      },
      {
        "field": "Density (per km²)",
        "type": "quantitative",
        "title": "Density (per km²)"
      },
      {
        "field": "2022pop",
        "type": "quantitative",
        "title": "Population in 2022",
        "format": ",.4s"
      },
      {
        "field": "Area (km²)",
        "type": "quantitative",
        "title": "Area (km²)",
        "format": ",.4s"
      }
    ]
  }
}